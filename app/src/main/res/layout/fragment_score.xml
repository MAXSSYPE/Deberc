<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ir.androidexception.datatable.DataTable
        android:id="@+id/data_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        app:corner_radius="8dp"
        app:direction="ltr"
        app:header_gravity="center"
        app:header_horizontal_padding="0dp"
        app:header_text_size="5sp"
        app:header_vertical_padding="16dp"
        app:header_text_color="?colorPrimary"
        app:row_text_color="?colorPrimary"
        app:divider_color="?colorPrimary"
        app:row_background_color="?colorBackgroundFloating"
        app:header_background_color="?colorBackgroundFloating"
        app:persian_number="false"
        app:row_gravity="center"
        app:row_text_size="12sp"
        app:row_vertical_padding="16dp"
        app:shadow="8dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        android:backgroundTint="#9BE0E7"
        ads:adUnitId="ca-app-pub-5807744662830254/7731288859" />
</LinearLayout>
