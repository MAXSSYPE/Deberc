<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorGradientCenter</item>
        <item name="colorAccent">@color/colorGradientStart</item>
        <item name="colorPrimary">@color/colorGradientStart</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:buttonStyle">@style/button_light</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:textViewStyle">@style/text_view</item>
        <item name="calcDialogStyle">@style/calcStyle</item>
    </style>

    <style name="calcStyle" parent="CalcDialogStyle">
        <item name="calcButtonTextCancel">@string/cancel</item>
        <item name="calcButtonTextClear">@string/clear</item>
        <item name="calcButtonTextOk">OK</item>
        <item name="calcBackgroundColor">@color/colorGradientStart</item>
        <item name="calcDialogButtonStyle">@style/dialog_but</item>
    </style>

    <style name="dialog_but" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorGradientStart</item>
    </style>

    <style name="text_view">
        <item name="android:textColor">#000</item>
    </style>

    <style name="button_light" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">22sp</item>
        <item name="android:background">@color/colorGradientStart</item>
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">#000</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorGradientStartDark</item>
        <item name="colorAccent">@color/colorAccentAma</item>
        <item name="colorPrimary">@color/colorGradientCenterDark</item>
        <item name="android:buttonStyle">@style/button_dark</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:textViewStyle">@style/text_view_dark</item>
        <item name="calcDialogStyle">@style/calcStyleDark</item>
    </style>

    <style name="calcStyleDark" parent="CalcDialogStyle">
        <item name="calcButtonTextCancel">@string/cancel</item>
        <item name="calcButtonTextClear">@string/clear</item>
        <item name="calcButtonTextOk">OK</item>
        <item name="calcBackgroundColor">@color/colorGradientStartDark</item>
        <item name="calcDialogButtonStyle">@style/dialog_but_dark</item>
    </style>

    <style name="dialog_but_dark" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorGradientStartDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_view_dark">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="edit_text_dark">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="button_dark" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@color/colorGradientStartDark</item>
    </style>

</resources>
